<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/content_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_bg_normal"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            style="@style/cover_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_weight="1"
            android:padding="2dip"
            android:text="@string/app_name"
            android:textSize="20dip" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@drawable/title_divider" />

        <ImageView
            android:id="@+id/main_iv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/title_user"
            android:padding="10dip"
            android:scaleType="fitCenter" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@drawable/title_divider" />

        <ImageView
            android:id="@+id/main_iv_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/title_write"
            android:padding="10dip"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_layout_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/main_tv_hidden"
            style="@style/cover_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dip"
            android:background="#30000000"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="15dip" />

        <EditText
            android:id="@+id/main_et_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/main_tv_hidden"
            android:background="#30000000"
            android:hint="标题 "
            android:padding="10dip"
            android:textColor="#f0ffffff"
            android:textSize="15dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/main_tv_hidden"
            android:padding="10dip"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_search" />
    </RelativeLayout>

    <cn.zilin.secretdiary.ui.MyListView
        android:id="@+id/main_lv_content"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dip"
        android:fastScrollEnabled="true"
        android:listSelector="@drawable/item_pressed"
        android:padding="5dip" />

    <LinearLayout
        android:id="@+id/adLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>