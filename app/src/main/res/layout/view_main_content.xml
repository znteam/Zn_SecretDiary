<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorThemePrimaryDark"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_abl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <TextView
            style="@style/cover_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu"
            android:drawablePadding="@dimen/padding_m"
            android:padding="@dimen/padding_m"
            android:text="@string/appname"
            android:textSize="@dimen/top_title_size" />

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/defaultBg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip" >

                <TextView
                    android:id="@+id/main_tv_hidden"
                    style="@style/cover_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dip"
                    android:background="#30000000"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="取消"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/main_et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/main_tv_hidden"
                    android:background="#30000000"
                    android:hint="标题 "
                    android:padding="10dip"
                    android:textColor="#f0ffffff"
                    android:textSize="15dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/main_tv_hidden"
                    android:padding="10dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_search" />
            </RelativeLayout>

            <cn.zilin.secretdiary.ui.MyListView
                android:id="@+id/main_lv_content"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dip"
                android:fastScrollEnabled="true"
                android:listSelector="@drawable/item_pressed"
                android:padding="5dip" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_fab_write"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/padding_m"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/title_write" />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
